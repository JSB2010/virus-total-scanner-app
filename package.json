      "provisioningProfile": null,
      "identity": null,
      "type": "distribution",
      "minimumSystemVersion": "10.15.0",
      "darkModeSupport": true,
      "bundleVersion": "1.0.2",
      "bundleShortVersion": "1.0.2",
      "helperBundleId": "com.jsb2010.dropsentinel.helper",
